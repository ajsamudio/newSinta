/* 
  Sinta by Marie - Celestial Romantic Aesthetic 
  "Ethereal Romanticism with Celestial Whimsy"
*/

@import url('https://fonts.googleapis.com/css2?family=Alice&family=Cormorant+Garamond:ital,wght@0,300;0,400;0,600;1,400&family=Lato:wght@300;400&display=swap');

:root {
    /* Color Palette */
    --bg-cream: #F9F5F0;
    --bg-blush: #F3E5E5;
    --text-main: #4A403A;
    /* Warm dark grey/brown */
    --text-light: #6B5E55;
    --accent-gold: #D4AF37;
    --accent-lavender: #E6E6FA;
    --accent-blue: #B0C4DE;
    --shadow-warm: rgba(74, 64, 58, 0.1);
    --glow-gold: rgba(212, 175, 55, 0.4);

    /* Typography */
    --font-heading: 'Cormorant Garamond', serif;
    --font-body: 'Alice', serif;
    /* Using Alice for that "storybook" body text feel */
    --font-ui: 'Lato', sans-serif;
    /* For small UI elements if needed */
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    background-color: var(--bg-cream);
    background-image: url('paper-texture.jpg');
    background-size: cover;
    background-attachment: fixed;
    background-blend-mode: multiply;
    color: var(--text-main);
    font-family: var(--font-body);
    line-height: 1.8;
    overflow-x: hidden;
    font-size: 18px;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    font-family: var(--font-heading);
    font-weight: 400;
    color: var(--text-main);
    letter-spacing: 0.02em;
}

a {
    text-decoration: none;
    color: inherit;
    transition: color 0.3s ease;
}

/* --- Header --- */
header {
    padding: 0.8rem 1rem;
    /* Reduced padding for shorter height */
    text-align: center;
    position: fixed;
    /* Fixed to stay on top */
    top: 0;
    width: 100%;
    /* More subtle gradient that fades out before the bottom edge */
    background: linear-gradient(to bottom, rgba(249, 245, 240, 0.8) 0%, rgba(249, 245, 240, 0) 90%);
    backdrop-filter: blur(2px);
    /* Reduced blur for seamlessness */
    z-index: 1000;
    transition: all 0.5s ease;
    /* Ensure the header doesn't block clicks on the very edge unless hovered */
    /* Full height */
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    position: relative;
    /* overflow: hidden;  <-- Removed to allow border to overlap */
    padding: 2rem;
    margin-top: 0;
}

.hero-bg {
    /* Not used if using img tag, but good fallback */
    background: radial-gradient(circle at center, var(--bg-cream), var(--bg-blush));
}

.hero-image-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    /* Seamless Fade Mask */
    -webkit-mask-image: linear-gradient(to bottom, black 85%, transparent 100%);
    mask-image: linear-gradient(to bottom, black 85%, transparent 100%);
}

/* Vignette effect for "old book" look */
.hero-image-container::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, transparent 50%, rgba(249, 245, 240, 0.8) 100%);
    pointer-events: none;
}

.hero-content {
    max-width: 800px;
    animation: fadeIn 2s ease-out;
    /* Removed boxy background/blur */
    background: transparent;
    padding: 1rem;
}

.hero h1 {
    font-size: 4.5rem;
    margin-bottom: 1rem;
    line-height: 1.1;
    color: #3e3632;
    /* Soft glow for readability without a box */
    text-shadow: 0 0 20px rgba(249, 245, 240, 0.8), 0 0 40px rgba(249, 245, 240, 0.6);
}

.hero p {
    font-size: 1.6rem;
    font-style: italic;
    color: #4A403A;
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
    position: relative;
}

.narrative p {
    font-size: 1.4rem;
    color: var(--text-light);
}

/* --- Collection Carousel --- */
.collection {
    padding: 4rem 0;
    /* Full width for carousel */
}

.section-title {
    text-align: center;
    font-size: 3rem;
    margin-bottom: 4rem;
    font-style: italic;
    position: relative;
    display: inline-block;
    width: 100%;
}

/* Decorative flourishes */
.section-title::after {
    content: "â¦";
    display: block;
    font-size: 2rem;
    color: var(--accent-gold);
    margin-top: 1rem;
    opacity: 0.6;
}

/* Carousel Layout */
.carousel-track-container {
    overflow-x: auto;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    /* Hide scrollbar but allow scroll */
    scrollbar-width: none;
    /* Firefox */
    -ms-overflow-style: none;
    /* IE 10+ */
    padding: 2rem 0;
    /* Space for shadows */

    /* Show exactly 3 items: (300px * 3) + (2rem gap * 2) = 900 + 72 = 972px */
    max-width: 972px;
    margin: 0 auto;
    /* Center the track */
}

.carousel-track-container::-webkit-scrollbar {
    display: none;
    /* Chrome/Safari */
}

.carousel-wrapper {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 3rem;
    /* Space for buttons */
}

.carousel-track {
    display: flex;
    gap: 2rem;
    width: max-content;
    /* Ensure items sit side by side */
}

.product-card {
    background: transparent;
    padding: 1rem;
    border: none;
    text-align: center;
    position: relative;
    /* Fixed width for carousel items */
    min-width: 300px;
    width: 300px;
    scroll-snap-align: center;
}

/* Carousel Buttons */
.carousel-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(249, 245, 240, 0.9);
    border: 1px solid var(--accent-gold);
    color: var(--text-main);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 10;
    transition: all 0.3s ease;
    /* Ornate detail */
    box-shadow: inset 0 0 0 2px var(--bg-cream), inset 0 0 0 3px var(--accent-gold);
}

.carousel-btn:hover {
    background: #fff;
    transform: translateY(-50%) scale(1.1);
    box-shadow:
        inset 0 0 0 2px #fff,
        inset 0 0 0 3px var(--accent-gold),
        0 0 15px var(--glow-gold);
}

.prev-btn {
    left: 0;
}

.next-btn {
    right: 0;
}

.product-image {
    width: 100%;
    aspect-ratio: 1;
    margin-bottom: 1.5rem;
    object-fit: cover;
    border-radius: 50%;
    /* Circular images for a locket/cameo feel */
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.5s ease, box-shadow 0.5s ease;
    filter: sepia(0.2);
}

.product-card:hover .product-image {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 20px 40px rgba(212, 175, 55, 0.3);
    filter: sepia(0);
}

.product-title {
    font-size: 1.6rem;
    margin-bottom: 0.5rem;
    font-family: var(--font-heading);
    font-style: italic;
}

.product-price {
    font-family: var(--font-ui);
    color: var(--text-light);
    font-size: 1rem;
    letter-spacing: 0.1em;
}

/* --- Giving Back --- */
.giving-back {
    padding: 8rem 2rem;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 6rem;
    max-width: 1200px;
    margin: 0 auto;
}

.giving-content {
    flex: 1;
    min-width: 300px;
}

.giving-image {
    flex: 1;
    min-width: 300px;
    height: 500px;
    border-radius: 200px 200px 20px 20px;
    /* Arch shape */
    overflow: hidden;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.1);
}

/* --- Footer --- */
footer {
    padding: 6rem 2rem;
    text-align: center;
    border-top: 1px solid rgba(74, 64, 58, 0.1);
    font-size: 1rem;
    color: var(--text-light);
    margin-top: 4rem;
}

.social-links {
    margin-bottom: 2rem;
}

.social-links a {
    margin: 0 1.5rem;
    font-style: italic;
    font-family: var(--font-heading);
    font-size: 1.4rem;
    position: relative;
}

.social-links a::after {
    content: '';
    position: absolute;
    width: 0;
    height: 1px;
    bottom: -5px;
    left: 0;
    background-color: var(--accent-gold);
    transition: width 0.3s;
}

.social-links a:hover::after {
    width: 100%;
}

/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* --- Button Style (Restored & Simplified) --- */
.btn-primary {
    display: inline-block;
    padding: 0.8rem 2.5rem;
    /* Petite padding */
    background-color: rgba(249, 245, 240, 0.2);
    /* Very subtle transparent backing */
    color: var(--text-main);
    font-family: var(--font-ui);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-weight: 500;
    font-size: 0.8rem;
    transition: all 0.4s ease;
    position: relative;

    /* Nice Gold Petite Border */
    border: 1px solid var(--accent-gold);
    border-radius: 2px;
    /* Slight rounding */
    box-shadow: 0 0 10px rgba(212, 175, 55, 0.1);
    /* Very soft glow */
}

.btn-primary:hover {
    background-color: rgba(255, 255, 255, 0.8);
    border-color: var(--text-main);
    transform: translateY(-1px);
    box-shadow: 0 5px 15px rgba(212, 175, 55, 0.2);
}

/* Mobile Adjustments */
@media (max-width: 768px) {

    /* Fix Header Logo Cutoff */
    header {
        padding: 1rem 0.5rem;
    }

    .logo {
        font-size: 2rem;
        /* Smaller logo */
        margin-bottom: 0.2rem;
    }

    /* Fix Hero Text Overflow */
    .hero h1 {
        font-size: 2.5rem;
        /* Much smaller to fit screen */
        line-height: 1.2;
        word-wrap: break-word;
        /* Ensure long words wrap */
        padding: 0 1rem;
        /* Safety padding */
    }

    .hero p {
        font-size: 1.1rem;
        padding: 0 1.5rem;
        /* More padding on sides */
        line-height: 1.6;
    }

    /* Adjust Button */
    .btn-primary {
        padding: 0.8rem 2rem;
        font-size: 0.8rem;
        width: 80%;
        /* Prevent it from being too wide or touching edges */
        max-width: 300px;
    }

    /* Carousel Mobile Adjustments */
    .carousel-wrapper {
        padding: 0 1rem;
        /* Less padding on mobile */
    }

    .carousel-btn {
        display: none;
        /* Hide buttons on mobile, use swipe */
    }

    .carousel-track-container {
        padding: 1rem 0;
    }

    .product-card {
        min-width: 260px;
        /* Slightly smaller cards */
        width: 260px;
    }

    /* Fix Giving Back Section */
    .giving-back {
        padding: 4rem 1rem;
        gap: 3rem;
    }

    .giving-image {
        height: 300px;
        /* Shorter image on mobile */
    }

    /* Ensure nav is accessible */
    header:active nav ul {
        opacity: 1;
        transform: translateY(0);
        pointer-events: all;
        background: rgba(249, 245, 240, 0.95);
        padding: 1rem;
        border-radius: 10px;
        flex-direction: column;
        /* Stack links */
        gap: 1rem;
    }
}